<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seetingpage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tech.emmettwoo.new308uav.SettingPage" >

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="" 
        android:background="@drawable/goback" />

    <Button
        android:id="@+id/saveStepOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepOver25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="保存" />

    <Button
        android:id="@+id/stepOver5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btnSetting"
        android:text="5" />

    <Button
        android:id="@+id/stepOver10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/stepOver5"
        android:layout_alignBottom="@+id/stepOver5"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/stepOver5"
        android:text="10" />

    <Button
        android:id="@+id/stepOver50"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/stepOver25"
        android:layout_alignBottom="@+id/stepOver25"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/stepOver25"
        android:text="50" />

    <Button
        android:id="@+id/stepOver25"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/stepOver10"
        android:layout_alignBottom="@+id/stepOver10"
        android:layout_toRightOf="@+id/saveData"
        android:text="25" />

</RelativeLayout>
